{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "declaration": true
        // "declarationDir": "@types"
    },
    "include": ["*.ts"],
    "exclude": ["node_modules"]
}
